{
    "name": "SKY API Tutorial: Authorization Code Flow Chrome Extension",
    "description": "View constituent data in Gmail",
    "version": "0.0.1",
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "https://mail.google.com/*",
        "https://inbox.google.com/*"
    ],
    "background": {
        "scripts": [
            "lib/jquery-3.0.0.min.js",
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [{
      "matches": [
        "https://mail.google.com/*",
        "https://inbox.google.com/*"
      ],
      "js": [
          "lib/inboxsdk.js",
          "content.js"
      ],
      "css": ["styles.css"],
      "run_at": "document_end"
    }]
}
